FROM node:22-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install

RUN npm install -g @angular/cli

COPY . .

EXPOSE 4200

# Run Angular development server with hot reload
# --poll enables file watching in Docker every 2 seconds
CMD ["ng", "serve", "--host", "0.0.0.0", "--poll=2000", "--proxy-config", "proxy.conf.docker.js"]

